<div id="container">
    <h1>Main table for stuff</h1>

    <table>
        <thead>
            <th>KB Article</th>
            <th>Classification</th>
            <th>Status</th>
            <th>Details</th>
            <th>Product</th>
        </thead>
        <tbody>
            <% for ( let i = 0; i < updates.length; i++ ) { %>
            <tr>
                <form id="form_" +i action='/edit' method='POST'>
                    <td><%= updates[i].KBArticle %><%= i %></td>
                    <td><%= updates[i].Classification %></td>
                    <td><%= updates[i].Status %></td>
                    <td><%= updates[i].Details %></td>
                    <td><%= updates[i].Product %></td>
                    <td><input type="button" value="Edit"></td>
                </form>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>