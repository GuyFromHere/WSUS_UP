<div id="container">
	<h1>WSUS Tracker</h1>

	<table>
		<thead>
			<th>KB Article</th>
			<th>Classification</th>
			<th>Status</th>
			<th>Details</th>
			<th>Product</th>
		</thead>
		<tbody>
            <form id="form_"+i action="/edit" method="POST"></form>
			<% for ( let i = 0; i < updates.length; i++ ) { %>
			<tr>
					<td class="editKb"><%= updates[i].KBArticle %><%= i %></td>
					<td class="editClassification"><%= updates[i].Classification %></td>
					<td class="editStatus"><%= updates[i].Status %></td>
					<td class="editDetails"><%= updates[i].Details %></td>
					<td class="editProduct"><%= updates[i].Product %></td>
					<td><input type="button" class="editBtn" data-id="<%= i %>"value="Edit" /></td>
			</tr>
            <% } %>
            </form>
			<form id="form_add" action="/add" method="POST">
				<td><input type="text" id="addKb" name="kbArticle" /></td>
				<td>
					<select id="addClassification">
						<% for ( let j = 0; j < classifications.length; j++) {%>
						<option value="<%= classifications[j].value %>" data-id="<%= classifications[j].id %>"><%= classifications[j].value %></option>
						<% } %>
					</select>
				</td>
				<td>
					<select id="addStatus">
						<% for ( let j = 0; j < statuses.length; j++) {%>
						<option value="<%= statuses[j].value %>" data-id="<%= statuses[j].id %>"><%= statuses[j].value %></option>
						<% } %>
					</select>
				</td>
				<td><input  type="text" id="addDetails" name="details" /></td>
				<td>
					<select id="addProduct">
						<% for ( let j = 0; j < products.length; j++) {%>
						<option value="<%= products[j].value %>" data-id="<%= products[j].id %>"><%= products[j].value %></option>
						<% } %>
					</select>
				</td>
				<td><input type="button" class="addBtn" value="Add" /></td>
			</form>
		</tbody>
	</table>
</div>
