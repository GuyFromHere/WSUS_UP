<div id="container">
	<h1>WSUS Tracker</h1>

	<table>
		<thead>
			<th>KB Article</th>
			<th>Classification</th>
			<th>Status</th>
			<th>Details</th>
			<th>Product</th>
		</thead>
		<tbody>
			<% for ( let i = 0; i < updates.length; i++ ) { %>
			<tr id="row<%= i %>" class="show">
				<td id="kb<%= i %>" class="updateInfo"><%= updates[i].KBArticle %><%= i %></td>
				<td id="classification<%= i %>" class="updateInfo"><%= updates[i].Classification %></td>
				<td id="status<%= i %>" class="updateInfo"><%= updates[i].Status %></td>
				<td id="details<%= i %>" class="updateInfo"><%= updates[i].Details %></td>
				<td id="product<%= i %>" class="updateInfo"><%= updates[i].Product %></td>
				<td><input type="submit" class="editBtn" data-id="<%= i %>" value="Edit" /></td>
			</tr>
            <% } %>
			<form id="form_add">
				<td><input type="text" id="addKb" name="kbArticle" /></td>
				<td>
					<select id="addClassification">
						<% for ( let j = 0; j < classifications.length; j++) {%>
						<option value="<%= classifications[j].id %>" data-id="<%= classifications[j].id %>"><%= classifications[j].value %></option>
						<% } %>
					</select>
				</td>
				<td>
					<select id="addStatus">
						<% for ( let j = 0; j < statuses.length; j++) {%>
						<option value="<%= statuses[j].id %>" data-id="<%= statuses[j].id %>"><%= statuses[j].value %></option>
						<% } %>
					</select>
				</td>
				<td><input  type="text" id="addDetails" name="details" /></td>
				<td>
					<select id="addProduct">
						<% for ( let j = 0; j < products.length; j++) {%>
						<option value="<%= products[j].id %>" data-id="<%= products[j].id %>"><%= products[j].value %></option>
						<% } %>
					</select>
				</td>
				<td><input type="button" class="addBtn" value="Add" /></td>
			</form>
		</tbody>
	</table>
</div>
